<%- model_class = CarPark -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:url_image) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:started_at) %></th>
      <th><%= model_class.human_attribute_name(:ended_at) %></th>
      <th><%= model_class.human_attribute_name(:started_time) %></th>
      <th><%= model_class.human_attribute_name(:ended_time) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:district_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @car_parks.each do |car_park| %>
      <tr>
        <td><%= link_to car_park.id, car_park_path(car_park) %></td>
        <td><%= car_park.address %></td>
        <td><%= car_park.price %></td>
        <td><%= car_park.url_image %></td>
        <td><%= car_park.description %></td>
        <td><%= car_park.state %></td>
        <td><%= car_park.started_at %></td>
        <td><%= car_park.ended_at %></td>
        <td><%= car_park.started_time %></td>
        <td><%= car_park.ended_time %></td>
        <td><%= car_park.user_id %></td>
        <td><%= car_park.district_id %></td>
        <td><%=l car_park.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_car_park_path(car_park), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      car_park_path(car_park),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_car_park_path,
            :class => 'btn btn-primary' %>
