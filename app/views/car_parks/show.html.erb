<%- model_class = CarPark -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @car_park.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @car_park.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url_image) %>:</strong></dt>
  <dd><%= @car_park.url_image %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @car_park.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @car_park.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:started_at) %>:</strong></dt>
  <dd><%= @car_park.started_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ended_at) %>:</strong></dt>
  <dd><%= @car_park.ended_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:started_time) %>:</strong></dt>
  <dd><%= @car_park.started_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ended_time) %>:</strong></dt>
  <dd><%= @car_park.ended_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @car_park.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:district_id) %>:</strong></dt>
  <dd><%= @car_park.district_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              car_parks_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_car_park_path(@car_park), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              car_park_path(@car_park),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
